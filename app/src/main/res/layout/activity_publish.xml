<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.windchat.ui.activity.PublishActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:adjustViewBounds="false"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clear_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="21dp"
            android:id="@+id/btn_cancel" />

        <ImageView
            android:src="@drawable/ic_send_white_24dp"
            android:background="@drawable/rounded_square_shape"
            android:layout_alignTop="@+id/btn_time"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:id="@+id/btn_publish"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/ic_story_white_24dp"
            android:background="@drawable/rounded_square_shape"
            android:layout_alignTop="@+id/btn_time"
            android:layout_toEndOf="@+id/btn_time"
            android:layout_marginStart="19dp"
            android:id="@+id/btn_who"
            android:layout_height="40dp"
            android:layout_width="40dp" />

        <ImageView
            android:src="@drawable/ic_access_alarm_white_24dp"
            android:background="@drawable/rounded_square_shape"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/btn_time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

</FrameLayout>
